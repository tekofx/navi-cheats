% pacman, yay

# Install package 
sudo pacman -S <package>

# Remove package
sudo pacman -R <package>

# Synchronize and update all packages
sudo pacman -Syu

# Search for packages
pacman -Ss <package>

# List packages installed
pacman -Q

# Show info of package installed
pacman -Qi <package>

# Removed cached packages not installed
sudo pacman -Sc

# Removed unused packages
sudo pacman -Rs (pacman -Qdtq)

# Removed a package and its dependecies
sudo pacman -Rsnc <package>